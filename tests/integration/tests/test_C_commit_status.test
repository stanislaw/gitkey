RUN: rm -rf %t
RUN: mkdir -p %t/home %t/repo %t/bin
RUN: cd %t/repo
RUN: git init -b main
RUN: git config user.name gitkey-test
RUN: git config user.email gitkey-test@example.invalid
RUN: echo "fixture" > README.txt
RUN: git add README.txt
RUN: printf '#!/bin/sh\necho \"Test commit\" > \"$1\"\n' > %t/bin/editor
RUN: chmod +x %t/bin/editor
RUN: %expect_exit 0 bash -c "cd %t/repo && printf 'C' | env %gitkey_env GIT_EDITOR=%t/bin/editor PATH=%t/bin:$PATH $GITKEY_BIN | filecheck %s"

CHECK: git commit
CHECK: git status
